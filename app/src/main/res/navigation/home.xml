<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.okuzminykh.ui.splash.SplashFragment"
        android:label="SplashFragment">
    </fragment>


    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.okuzminykh.ui.setting.SettingFragment"
        android:label="Set up game">
        <action
            android:id="@+id/action_settingFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.okuzminykh.ui.game.GameFragment"
        android:label="Game">
        <argument
            android:name="userInput"
            app:argType="integer[]" />
        <action
            android:id="@+id/action_gameFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>

</navigation>